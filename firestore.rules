rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // Products: Everyone can read, only authenticated admin can write/delete
    match /products/{productId} {
      allow read: if true;
      allow write, delete: if isAuthenticated();
    }

    // Reviews: Everyone can read approved reviews, anyone can create (status: pending)
    // Only admin can update/delete
    match /reviews/{reviewId} {
      allow read: if true;
      allow create: if request.resource.data.status == 'pending';
      allow update, delete: if isAuthenticated();
    }

    // Orders: Anyone can create or read (needed for checkout + tracking page).
    // Only authenticated admin can update or delete.
    match /orders/{orderId} {
      allow create: if true;
      allow read: if true;
      allow update, delete: if isAuthenticated();
    }

    // Keys: Only authenticated admin can read/write. Unauthenticated can check count
    // (for stock display). Full CRUD only for authenticated.
    match /keys/{keyId} {
      allow read: if true; // Public count read for stock display
      allow write, delete: if isAuthenticated();
    }

    // Applications: Anyone can create, only admin can read/update/delete
    match /applications/{appId} {
      allow create: if true;
      allow read, update, delete: if isAuthenticated();
    }

    // Settings: Public read (for store config), Admin write/delete
    match /settings/{docId} {
      allow read: if true;
      allow write, delete: if isAuthenticated();
    }

    // Incoming Payments (Automation bridge): Admin only
    match /incoming_payments/{docId} {
      allow read, write, delete: if isAuthenticated();
    }

    // Resellers: Admin access only
    match /resellers/{resellerId} {
      allow read, write, delete: if isAuthenticated();
    }
  }
}
